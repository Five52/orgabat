<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8"/>
    <title>
        Orgabat
    </title>
    <link rel="stylesheet" href="{{ absolute_url(asset('vendor/bootstrap/css/bootstrap.min.css')) }}">
    <link rel="stylesheet" href="{{ absolute_url(asset('css/styles.css')) }}">
    <link rel="stylesheet" href="{{ absolute_url(asset('css/headerIllustration.css')) }}">
    <link rel="stylesheet" href="{{ absolute_url(asset('vendor/fontawesome/css/font-awesome.min.css')) }}">
    <link rel="icon" type="image/x-icon" href="{{ absolute_url(asset('favicon.ico')) }}"/>
</head>
<body>
<div class="container">
    <h1 class="text-center">Orgabat</h1>
    <h2 class="text-center">Résultats des jeux</h2>
    <div class="user-info col-sm-4">
        <p class="name">{{ user.lastName|upper }} {{ user.firstName }}</p>
        <p class="birth">Né le : {{ user.formattedBirthDate|date("d/m/Y") }}</p>
        <p class="section">Inscrit en <span class="sectionName">{{ user.section.name }}</span></p>
    </div>
    {% for category in categories  %}
        <h3 class="text-center clearfix col-sm-12 titlePdf">{{ category.name }}</h3>
        <table class="table table-stats">
            <thead>
            <tr>
                <th>#</th>
                <th>Temps ( en secondes )</th>
                <th>Santé</th>
                <th>Organisation</th>
                <th>Notoriété de l'entreprise</th>
            </tr>
            </thead>
            <tbody >
            {% for exercise in category.exercises|sort %}
            <tr>
                <td scope="row">{{ exercise.name }}</td>
                <td>{{ exercise.bestExerciseHistory.timer }}</td>
                <td>{{ exercise.bestExerciseHistory.healthNote }} / {{ exercise.healthMaxNote }}</td>
                <td>{{ exercise.bestExerciseHistory.organizationNote }} / {{ exercise.organizationMaxNote }}</td>
                <td>{{ exercise.bestExerciseHistory.businessNotorietyNote }} / {{ exercise.businessNotorietyMaxNote }}</td>
            </tr>
            {% endfor %}
            <tr>
                <td scope="row">Total</td>
                <td>{{ category.dataFromAllBestExercises.timer }}</td>
                <td>{{ category.dataFromAllBestExercises.healthNote }} / {{ stats.global.healthNote }}</td>
                <td>{{ category.dataFromAllBestExercises.organizationNote }} / {{ stats.global.organizationNote }}</td>
                <td>{{ category.dataFromAllBestExercises.businessNotorietyNote }} / {{ stats.global.businessNotorietyNote }}</td>
            </tr>
            </tbody>
        </table>
    {% endfor %}
</div>
</body>
</html>


