<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8" />
    <title>{% block title %}Orgabat{% endblock %}</title>
    {% block stylesheets %}
        <link rel="stylesheet" href="{{ asset('vendor/bootstrap/css/bootstrap.min.css') }}">
        <link rel="stylesheet" href="{{ asset('modules/game/css/game.css') }}">
    {% endblock %}
    <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
</head>
<body>
{% block body %}
    <div id="game"><div id="game-canvas"></div><div id="gabator-canvas">
        <div id="gabator-panel">
            <div id="gabator-panel-stats">
                <h4>Statistiques</h4>
                <span>Santé</span>
                <div class="progress">
                    <div id="gabator-panel-stats-health" class="progress-bar progress-bar-success" role="progressbar" aria-valuenow="40" aria-valuemin="0" aria-valuemax="100" style="width: 0%"></div>
                </div>
                <span>Organisation</span>
                <div class="progress">
                    <div id="gabator-panel-stats-organization" class="progress-bar progress-bar-info" role="progressbar" aria-valuenow="20" aria-valuemin="0" aria-valuemax="100" style="width: 0%"></div>
                </div>
                <span>Notoriété de l'entreprise</span>
                <div class="progress">
                    <div id="gabator-panel-stats-enterprise" class="progress-bar progress-bar-warning" role="progressbar" aria-valuenow="60" aria-valuemin="0" aria-valuemax="100" style="width: 0%"></div>
                </div>
            </div>
            <div id="gabator-panel-info" class="disabled">
                <h4>Informations</h4>
                <p id="gabator-panel-info-text">test</p>
            </div>
        </div>
    </div></div>
{% endblock %}
{% block javascripts %}
    <script type="application/javascript" src="{{ asset('js/tools.js') }}"></script>
    <script type="application/javascript" src="{{ asset('js/game.js') }}"></script>
    <script type="application/javascript">
        window.game_id = {{ id }};
        window.game_path = "{{ asset('modules/game/games/' ~ id ~ '/src/') }}";
        window.api = new Api("{{ path('apigame_score') }}");
    </script>
    <script type="application/javascript" src="{{ asset('vendor/phaser/js/phaser.min.js') }}"></script>

    <script type="application/javascript" src="{{ asset('modules/game/js/lib/phaser_modals/modal.js') }}"></script>

    <script type="application/javascript" src="{{ asset('modules/game/js/system/utils/Dom.js') }}"></script>
    <script type="application/javascript" src="{{ asset('modules/game/js/system/utils/Math.js') }}"></script>
    <script type="application/javascript" src="{{ asset('modules/game/js/system/utils/Type.js') }}"></script>

    <script type="application/javascript" src="{{ asset('modules/game/js/system/gabator/ProgressBar.js') }}"></script>
    <script type="application/javascript" src="{{ asset('modules/game/js/system/gabator/Info.js') }}"></script>

    <script type="application/javascript" src="{{ asset('modules/game/js/system/phaser/utils/EventHandler.js') }}"></script>
    <script type="application/javascript" src="{{ asset('modules/game/js/system/phaser/utils/Keyboard.js') }}"></script>
    <script type="application/javascript" src="{{ asset('modules/game/js/system/phaser/utils/Networking.js') }}"></script>
    <script type="application/javascript" src="{{ asset('modules/game/js/system/phaser/utils/Position.js') }}"></script>

    <script type="application/javascript" src="{{ asset('modules/game/js/system/phaser/Xmodal.js') }}"></script>
    <script type="application/javascript" src="{{ asset('modules/game/js/system/phaser/modals/DescriptionInfobox.js') }}"></script>
    <script type="application/javascript" src="{{ asset('modules/game/js/system/phaser/modals/SmallFeedback.js') }}"></script>

    <script type="application/javascript" src="{{ asset('modules/game/js/system/phaser/Inventary.js') }}"></script>
    <script type="application/javascript" src="{{ asset('modules/game/js/system/phaser/Modal.js') }}"></script>
    <script type="application/javascript" src="{{ asset('modules/game/js/system/phaser/Object.js') }}"></script>
    <script type="application/javascript" src="{{ asset('modules/game/js/system/phaser/Sprite.js') }}"></script>
    <script type="application/javascript" src="{{ asset('modules/game/js/system/phaser/TilemapLayer.js') }}"></script>
    {% include 'OrgabatGameBundle:Game/partials:' ~ id ~ '.html.twig' with { 'id': id } %}
{% endblock %}
</body>
</html>
