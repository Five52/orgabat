{% extends 'base.html.twig' %}

{% trans_default_domain 'FOSUserBundle' %}

{% block fos_user_content %}
{% if error %}
    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}
<h1 class="text-center">Connexion</h1>

<form action="{{ path("fos_user_security_check") }}" method="post">
    <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />

    <div class="form-group">
        <label for="username">Prénom Nom</label>
        <input type="text" class="form-control" id="username" name="_username" value="{{ last_username }}" required="required" />
    </div>
    <div class="form-group">
        <label for="password">Mot de passe{# (ex: {{ 'now' | date('dmY')}}) #}</label>
        <input type="password" class="form-control" id="password" name="_password" required="required" />
    </div>
    <div>
        <input type="submit" class="btn btn-success" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}" />
        <a href="{{ path('fos_user_resetting_request') }}">Mot de passe oublié ?</a>
    </div>
</form>
{% endblock fos_user_content %}
