{% extends 'base.html.twig' %}
{% block body %}
    <h1>ORGABAT</h1>

    <div class="col-xs-3 pull-right">
        <div class="panel panel-default">
            <div class="panel-body">
                <p>Santé</p>
                <div class="progress">
                    <div class="progress-bar progress-bar-success" role="progressbar" aria-valuenow="40" aria-valuemin="0" aria-valuemax="100" style="width: 40%">
                    </div>
                </div>
                <p>Organisation</p>
                <div class="progress">
                    <div class="progress-bar progress-bar-info" role="progressbar" aria-valuenow="20" aria-valuemin="0" aria-valuemax="100" style="width: 20%">
                    </div>
                </div>
                <p>Notoriété de l'entreprise</p>
                <div class="progress">
                    <div class="progress-bar progress-bar-warning" role="progressbar" aria-valuenow="60" aria-valuemin="0" aria-valuemax="100" style="width: 60%">
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-xs-2 noselect">
        <div class="panel panel-default panel-body rubrique" data-game-id="1">
            <div class="pull-right">
                <span class="glyphicon glyphicon-star"></span>
                <span class="glyphicon glyphicon-star"></span>
                <span class="glyphicon glyphicon-star"></span>
            </div>
            <p>La gestion de l’espace de travail</p>
            <p>brève description</p>
        </div>
    </div>
    <div class="modal fade bs-example-modal-lg" id="gameModal" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel">
      <div class="modal-dialog modal-lg">
        <div class="modal-content">
          <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">×</span>
            </button>
            <h4 class="modal-title" id="myLargeModalLabel">La gestion de l’espace de travail</h4>
          </div>
          <div class="modal-body">
            <iframe src="" width="100%" height="100%"></iframe>
          </div>
        </div>
      </div>
    </div>

{% endblock %}
{% block javascripts %}
  {{ parent() }}
  <script src="{{ asset('js/rubriques.js') }}"></script>
{% endblock %}
