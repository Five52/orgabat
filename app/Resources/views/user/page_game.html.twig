{% extends 'blank.html.twig' %}

{% block body %}
    <link rel="stylesheet" href="{{ asset('modules/game/css/game.css') }}">

    {% block javascript %}
        {{ parent() }}
        <script type="text/javascript">
            document.addEventListener("DOMContentLoaded", function(e) {
                var game = new Game.Main({{ id }}, "{{ asset('modules/game/' ~ id ) }}");
            });
        </script>
        <script src="{{ asset('vendor/phaser/js/phaser.min.js') }}"></script>
        <script src="{{ asset('modules/game/js/phaser_modals/modal.js') }}"></script>
        <script src="{{ asset('modules/game/' ~ id ~ '/js/main.js') }}"></script>
        <script src="{{ asset('modules/game/' ~ id ~ '/js/modal.js') }}"></script>
        <script src="{{ asset('modules/game/' ~ id ~ '/js/map.js') }}"></script>
        <script src="{{ asset('modules/game/' ~ id ~ '/js/entity.js') }}"></script>
        <script src="{{ asset('modules/game/' ~ id ~ '/js/interact.js') }}"></script>
    {% endblock %}
{% endblock %}
